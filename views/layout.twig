            {% if nav == 'web' %}
              <img src="/images/world-wide-web.png">
            {% else %}
              <img id="img_nav_web" src="/images/world-wide-web_black.png">
            {% endif %}
            <p>Web</p>
          </a>
        </div>
        <div class="nav_container {{ nav == 'mobile' ? 'nav_container_selected' : ''}}">
