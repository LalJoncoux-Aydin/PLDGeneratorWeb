            {% else %}
              <img id="img_nav_algo" src="/images/neural_black.png">
            {% endif %}
            <p>Algo</p>
          </a>
        </div>
        <div class="nav_container {{ nav == 'devops' ? 'nav_container_selected' : ''}}">
          <a href="/devops" class="nav {{ nav == 'devops' ? 'nav_selected' : ''}}" onmouseover="document.getElementById('img_nav_devops').src='images/devops.png'" onmouseout="document.getElementById('img_nav_devops').src='images/devops_black.png'">
            {% if nav == 'devops' %}
              <img src="/images/devops.png">
            {% else %}
              <img id="img_nav_devops" src="/images/devops_black.png">
            {% endif %}
